<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gena.cardsui.add_Repository">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:background="@drawable/fon" />
    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/BackButton"
        android:layout_width="60dp"
        android:background="@drawable/strelka"
        android:layout_height="60dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add repository"
        android:textColor="@color/text_color"
        android:id="@+id/textView"
        android:layout_marginLeft="70dp"
        android:textSize="30dp"
        android:layout_marginTop="70dp"
        android:layout_gravity="left|top" />
</FrameLayout>


    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_icon="@drawable/plus"
        fab:fab_colorNormal="#64c9d9"
        fab:fab_colorPressed="@color/pink"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="83dp"
        android:layout_marginRight="0dp"
        android:layout_marginEnd="16dp" />



    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/Edt_txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        app:met_baseColor="#000000"
        android:hint="Введите имя репозитория"
        app:met_primaryColor="#64c9d9"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        app:met_floatingLabel="normal" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/Edt_txt_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        app:met_baseColor="#000000"
        android:hint="Введите description"
        app:met_primaryColor="#64c9d9"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        app:met_floatingLabel="normal" />

</RelativeLayout>
