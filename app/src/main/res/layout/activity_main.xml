<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:background="@drawable/fon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Github client"
            android:textColor="@color/text_color"
            android:id="@+id/textView"
            android:layout_marginLeft="70dp"
            android:textSize="30dp"
            android:layout_marginTop="70dp"
            android:layout_gravity="left|top" />
</FrameLayout>

    <it.gmariotti.cardslib.library.view.CardListView
        android:id="@+id/myList"
        android:layout_marginTop="121dp"
        android:layout_marginRight="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card:list_card_layout_resourceID="@layout/list_card_thumbnail_layout"
 />


<com.getbase.floatingactionbutton.FloatingActionsMenu
android:id="@+id/multiple_actions_down"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentRight="true"
android:layout_alignParentEnd="true"
android:layout_alignParentTop="true"
fab:fab_addButtonColorNormal="@color/pink"
fab:fab_addButtonColorPressed="#64c9d9"
fab:fab_addButtonPlusIconColor="@color/white"
fab:fab_expandDirection="down"
fab:fab_labelStyle="@style/menu_label_style"
android:layout_marginTop="83dp"
android:layout_marginRight="0dp"
android:layout_marginEnd="16dp">


    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_addButtonSize="mini"
        fab:fab_title="Exit"
        fab:fab_icon="@drawable/ic_fab_star"
        fab:fab_colorNormal="#808080"
        fab:fab_colorPressed="@color/white_pressed"/>
    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_logoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_addButtonSize="mini"
        fab:fab_title="Log off"
        fab:fab_icon="@drawable/ic_fab_star"
        fab:fab_colorNormal="#808080"
        fab:fab_colorPressed="@color/white_pressed"/>
<com.getbase.floatingactionbutton.FloatingActionButton
    android:id="@+id/button_about_user"
    fab:fab_addButtonSize="mini"
    android:layout_width="wrap_content"
    fab:fab_icon="@drawable/ic_fab_star"
    android:layout_height="wrap_content"
    fab:fab_colorNormal="#808080"
    fab:fab_colorPressed="@color/white_pressed"
    android:onClick="View_about_user"
    fab:fab_title="About user"/>

<com.getbase.floatingactionbutton.FloatingActionButton
    android:id="@+id/button_add_rep"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    fab:fab_addButtonSize="mini"
    fab:fab_title="Add repository"
    fab:fab_icon="@drawable/ic_fab_star"
    fab:fab_colorNormal="#808080"
    fab:fab_colorPressed="@color/white_pressed"/>



</com.getbase.floatingactionbutton.FloatingActionsMenu>
    </RelativeLayout>
